<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageItem"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic[15]" />

    <TextView
        android:id="@+id/tvImageCaption"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageItem"
        android:layout_alignTop="@+id/imageItem"
        android:layout_alignEnd="@+id/imageItem"
        android:layout_alignBottom="@+id/imageItem"
        android:layout_marginStart="19dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="14dp"
        android:text="Caption " />
</RelativeLayout>